<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inner_grad2"
        android:padding="5dp">

        <TextView
            android:id="@+id/P_record_name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="@font/poppins_light"
            android:text=""
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/P_ratingChange2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_record_contest_id2"
            tools:text="@string/ContestName" />

        <TextView
            android:id="@+id/P_record_contest_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/constestID" />

        <TextView
            android:id="@+id/P_ratingChange2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/greenDot"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/P_record_name2"
            app:layout_constraintTop_toBottomOf="@+id/P_record_contest_id2"
            tools:text="@string/registeredTime" />

        <TextView
            android:id="@+id/P_labelRank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/LabelRank"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_record_name2" />

        <TextView
            android:id="@+id/P_oldRating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/duration"
            android:textColor="#5E5C5C"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_ratingChange2" />

        <TextView
            android:id="@+id/P_rank2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/design_default_color_error"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/P_labelRank2"
            app:layout_constraintStart_toEndOf="@+id/P_labelRank2"
            tools:text="@string/registeredTime" />

        <TextView
            android:id="@+id/P_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="viewEnd"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/P_record_contest_id2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/date/ddmmyy" />

        <Button
            android:id="@+id/P_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:minWidth="8dp"
            android:minHeight="0dp"
            android:text="@string/View"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/P_rank2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/P_ratingChange2Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/P_record_name2"
            app:layout_constraintTop_toBottomOf="@+id/P_record_contest_id2"
            tools:text="@string/registeredTime" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>